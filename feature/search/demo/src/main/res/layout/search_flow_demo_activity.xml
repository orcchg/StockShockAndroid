<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_6"
        android:layout_marginStart="@dimen/keyline_4.5"
        android:text="@string/search_popular_requests_title"
        android:textAppearance="?textAppearanceHeadline5" />

    <com.orcchg.yandexcontest.search_bar.ui.SearchFlowLayout
        android:id="@+id/sfl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_3"
        android:layout_marginStart="@dimen/keyline_4"
        app:sflEndSideLedge="@dimen/keyline_12">

        <include layout="@layout/search_suggestions" />
    </com.orcchg.yandexcontest.search_bar.ui.SearchFlowLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="@dimen/keyline_4.5"
        android:text="@string/search_recent_results_title"
        android:textAppearance="?textAppearanceHeadline5" />

    <com.orcchg.yandexcontest.search_bar.ui.SearchFlowLayout
        android:id="@+id/sfl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_3"
        android:layout_marginStart="@dimen/keyline_4"
        app:sflEndSideLedge="@dimen/keyline_12">

        <include layout="@layout/search_suggestions2" />
    </com.orcchg.yandexcontest.search_bar.ui.SearchFlowLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keyline_4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_scroll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_scroll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right" />
    </LinearLayout>

</LinearLayout>
