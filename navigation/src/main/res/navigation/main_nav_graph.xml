<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_fragment_stock_pages">

    <fragment
        android:id="@id/nav_fragment_stock_pages"
        android:name="com.orcchg.yandexcontest.main.ui.MainFragment" />

    <!-- Dynamic Feature -->
    <fragment
        android:id="@id/nav_fragment_stock_details"
        android:name="com.orcchg.yandexcontest.stockdetails.main.ui.StockDetailsMainFragment"
        app:moduleName="stock_details_main">

        <argument
            android:name="ticker"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <action
        android:id="@+id/nav_action_open_stock_details_fragment"
        app:destination="@id/nav_fragment_stock_details" />

</navigation>
